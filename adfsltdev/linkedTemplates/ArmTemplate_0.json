{
	"$schema": "http://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
	"contentVersion": "1.0.0.0",
	"parameters": {
		"factoryName": {
			"type": "string",
			"metadata": "Data Factory name",
			"defaultValue": "adfsltdev"
		},
		"optima_connectionString": {
			"type": "secureString",
			"metadata": "Secure string for 'connectionString' of 'optima'"
		},
		"optimaStorage_connectionString": {
			"type": "secureString",
			"metadata": "Secure string for 'connectionString' of 'optimaStorage'"
		},
		"optimabatch_accessKey": {
			"type": "secureString",
			"metadata": "Secure string for 'accessKey' of 'optimabatch'"
		},
		"optimabatch_properties_typeProperties_accountName": {
			"type": "string",
			"defaultValue": "optima"
		},
		"optimabatch_properties_typeProperties_batchUri": {
			"type": "string",
			"defaultValue": "https://optima.westeurope.batch.azure.com"
		},
		"optimabatch_properties_typeProperties_poolName": {
			"type": "string",
			"defaultValue": "Optima-engine"
		}
	},
	"variables": {
		"factoryId": "[concat('Microsoft.DataFactory/factories/', parameters('factoryName'))]"
	},
	"resources": [
		{
			"name": "[concat(parameters('factoryName'), '/optima')]",
			"type": "Microsoft.DataFactory/factories/linkedServices",
			"apiVersion": "2018-06-01",
			"properties": {
				"annotations": [],
				"type": "AzureBlobStorage",
				"typeProperties": {
					"connectionString": "[parameters('optima_connectionString')]"
				}
			},
			"dependsOn": []
		},
		{
			"name": "[concat(parameters('factoryName'), '/optimaStorage')]",
			"type": "Microsoft.DataFactory/factories/linkedServices",
			"apiVersion": "2018-06-01",
			"properties": {
				"annotations": [],
				"type": "AzureBlobStorage",
				"typeProperties": {
					"connectionString": "[parameters('optimaStorage_connectionString')]"
				}
			},
			"dependsOn": []
		},
		{
			"name": "[concat(parameters('factoryName'), '/optimabatch')]",
			"type": "Microsoft.DataFactory/factories/linkedServices",
			"apiVersion": "2018-06-01",
			"properties": {
				"annotations": [],
				"type": "AzureBatch",
				"typeProperties": {
					"accountName": "[parameters('optimabatch_properties_typeProperties_accountName')]",
					"accessKey": {
						"type": "SecureString",
						"value": "[parameters('optimabatch_accessKey')]"
					},
					"batchUri": "[parameters('optimabatch_properties_typeProperties_batchUri')]",
					"poolName": "[parameters('optimabatch_properties_typeProperties_poolName')]",
					"linkedServiceName": {
						"referenceName": "optimaStorage",
						"type": "LinkedServiceReference"
					}
				}
			},
			"dependsOn": [
				"[concat(variables('factoryId'), '/linkedServices/optimaStorage')]"
			]
		},
		{
			"name": "[concat(parameters('factoryName'), '/Optimasetup')]",
			"type": "Microsoft.DataFactory/factories/pipelines",
			"apiVersion": "2018-06-01",
			"properties": {
				"description": "Optimasetup",
				"activities": [
					{
						"name": "Custom1",
						"type": "Custom",
						"dependsOn": [],
						"policy": {
							"timeout": "7.00:00:00",
							"retry": 0,
							"retryIntervalInSeconds": 30,
							"secureOutput": false,
							"secureInput": false
						},
						"userProperties": [],
						"typeProperties": {
							"command": "python3 optima.py",
							"resourceLinkedService": {
								"referenceName": "optimaStorage",
								"type": "LinkedServiceReference"
							},
							"folderPath": "optima-input",
							"referenceObjects": {
								"linkedServices": [],
								"datasets": []
							}
						},
						"linkedServiceName": {
							"referenceName": "optimabatch",
							"type": "LinkedServiceReference"
						}
					}
				],
				"annotations": []
			},
			"dependsOn": [
				"[concat(variables('factoryId'), '/linkedServices/optimaStorage')]",
				"[concat(variables('factoryId'), '/linkedServices/optimabatch')]"
			]
		},
		{
			"name": "[concat(parameters('factoryName'), '/Optima-Trigger')]",
			"type": "Microsoft.DataFactory/factories/triggers",
			"apiVersion": "2018-06-01",
			"properties": {
				"description": "Optima-Trigger",
				"annotations": [],
				"runtimeState": "Started",
				"pipelines": [
					{
						"pipelineReference": {
							"referenceName": "Optimasetup",
							"type": "PipelineReference"
						},
						"parameters": {}
					}
				],
				"type": "ScheduleTrigger",
				"typeProperties": {
					"recurrence": {
						"frequency": "Day",
						"interval": 1,
						"startTime": "2021-01-08T07:55:00Z",
						"timeZone": "UTC",
						"schedule": {
							"minutes": [
								30
							],
							"hours": [
								12
							]
						}
					}
				}
			},
			"dependsOn": [
				"[concat(variables('factoryId'), '/pipelines/Optimasetup')]"
			]
		}
	]
}