{
	"name": "gender",
	"properties": {
		"description": "Fetches employee compensation from Bamboo HR to ADLS RAw zone through API (as-is json files)",
		"activities": [
			{
				"name": "gender",
				"type": "Copy",
				"dependsOn": [],
				"policy": {
					"timeout": "7.00:00:00",
					"retry": 0,
					"retryIntervalInSeconds": 30,
					"secureOutput": false,
					"secureInput": false
				},
				"userProperties": [
					{
						"name": "Destination",
						"value": "cntrawzonesltdev/BambooHR/FILE_BAMBOOHR"
					}
				],
				"typeProperties": {
					"source": {
						"type": "RestSource",
						"httpRequestTimeout": "00:01:40",
						"requestInterval": "00.00:00:00.010",
						"requestMethod": "POST",
						"requestBody": "{\n    \"title\": \"CustomGenderReport\",\n    \n    \"fields\": [\n        \"firstName\",\n        \"lastName\",\n        \"employeeNumber\",\n        \"customGenderCategory\"\n    ]\n}"
					},
					"sink": {
						"type": "DelimitedTextSink",
						"storeSettings": {
							"type": "AzureBlobFSWriteSettings"
						},
						"formatSettings": {
							"type": "DelimitedTextWriteSettings",
							"quoteAllText": true,
							"fileExtension": ".txt"
						}
					},
					"enableStaging": false,
					"translator": {
						"type": "TabularTranslator",
						"mappings": [
							{
								"source": {
									"path": "$['id']"
								}
							},
							{
								"source": {
									"path": "$['employeeId']"
								}
							},
							{
								"source": {
									"path": "$['startDate']"
								}
							},
							{
								"source": {
									"path": "$['rate']['currency']"
								}
							},
							{
								"source": {
									"path": "$['rate']['value']"
								}
							},
							{
								"source": {
									"path": "$['type']"
								}
							},
							{
								"source": {
									"path": "$['exempt']"
								}
							},
							{
								"source": {
									"path": "$['reason']"
								}
							},
							{
								"source": {
									"path": "$['comment']"
								}
							},
							{
								"source": {
									"path": "$['paidPer']"
								}
							},
							{
								"source": {
									"path": "$['paySchedule']"
								}
							},
							{
								"source": {
									"path": "$['overtimeRate']['currency']"
								}
							},
							{
								"source": {
									"path": "$['overtimeRate']['value']"
								}
							}
						]
					}
				},
				"inputs": [
					{
						"referenceName": "RestResource1",
						"type": "DatasetReference"
					}
				],
				"outputs": [
					{
						"referenceName": "DelimitedText2",
						"type": "DatasetReference"
					}
				]
			}
		],
		"folder": {
			"name": "HR/REST API TO ADLS RAW"
		},
		"annotations": []
	}
}